@model IEnumerable<Proyecto>
@if (Model is not null)
{
    <div class="text-center" style="padding-top: 6rem;">
        <h1>Mis Trabajos recientes</h1>
        <p>Aqui puedes ver algunos de mis trabajos recientes.</p>
        <div class="container">
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var proyecto in Model)
                {
                    <div class="col">
                        <div class="card h100">
                            <img src="@proyecto.imagenUrl" alt="" class="card-img-top" />
                            <div class="card-body">
                                <h5 class="card-title">@proyecto.titulo</h5>
                                <p class="card-text">@proyecto.descripcion</p>
                            </div>
                            <div class="card-footer">
                                <a class="btn btn-primary" href="@proyecto.link" target="_blank" rel="noopener noreferrer">Visitar</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

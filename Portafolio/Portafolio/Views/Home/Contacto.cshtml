
@{
    ViewData["Title"] = "Contacto";
}

<h1>Formulario de contacto</h1>

<form asp-controller="Home" asp-action="Contacto" >
    <div class="mb-3">
        <label for="nombre" class="form-label">Nombre</label>
        <input type="text" id="nombre" class="form-control" name="nombre" placeholder="Ejemplo: Pablo Gonzalez" />
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" id="email" class="form-control" name="email" placeholder="Ejemplo: pgonzalez@ejemplo.com.ar" />
    </div>
        

    <div class="mb-3">
        <label for="mensaje" class="form-label">Mensaje</label>
        <textarea type="text" id="mensaje" class="form-control" name="mensaje" row="3"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>


</form>
